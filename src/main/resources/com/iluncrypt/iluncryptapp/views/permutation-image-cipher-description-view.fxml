<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_LEFT" spacing="15" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.iluncrypt.iluncryptapp.controllers.PermutationImageCipherDescriptionController"
      style="-fx-padding: 20;">

    <!-- Title -->
    <Label text="Multiplicative Cipher" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-alignment: center-left;" />

    <!-- Explanation -->
    <Label text="The Affine Cipher is a monoalphabetic substitution cipher where each letter in an alphabet is mapped to its numeric equivalent and transformed using a linear function."
           wrapText="true"
           style="-fx-font-size: 16px; -fx-padding: 10; -fx-alignment: center-left;" />

    <!-- Encryption Formula -->
    <Label text="Encryption Formula:" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-alignment: center-left;" />
    <ImageView fx:id="encryptionFormula" fitWidth="400" preserveRatio="true" />

    <!-- Decryption Formula -->
    <Label text="Decryption Formula:" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-alignment: center-left;" />
    <ImageView fx:id="decryptionFormula" fitWidth="400" preserveRatio="true" />

    <!-- Example -->
    <Label text="Example: Encrypting 'HELLO' with a=5, b=8" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-alignment: center-left;" />
    <Label text="Using the formula, each letter is transformed accordingly:" wrapText="true"
           style="-fx-font-size: 14px; -fx-alignment: center-left;" />
    <ImageView fx:id="exampleImage" fitWidth="400" preserveRatio="true" />
</VBox>
