<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>
<?import io.github.palexdev.materialfx.controls.MFXToggleButton?>

<GridPane alignment="CENTER" hgap="10" vgap="10"
          fx:id="grid"
          xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.iluncrypt.iluncryptapp.controllers.AESDescriptionController"
          stylesheets="@../assets/styles/Common.css"
          style="-fx-padding: 15;">

    <!-- Content Container -->
    <StackPane fx:id="contentContainer" GridPane.columnIndex="0" GridPane.rowIndex="0"
               GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
               style="-fx-padding: 10; -fx-background-radius: 10; -fx-background-color: white;">
        <VBox spacing="10" alignment="TOP_LEFT" maxWidth="Infinity" maxHeight="Infinity" style="-fx-padding: 10;">

            <!-- Title -->
            <TextFlow textAlignment="JUSTIFY">
                <Text text="AES (Advanced Encryption Standard)" styleClass="title" />
            </TextFlow>

            <!-- General Explanation (Friendly) -->
            <TextFlow textAlignment="JUSTIFY">
                <Text text="AES is a widely adopted symmetric encryption standard used to secure sensitive data. It processes fixed-size 128-bit blocks through a series of transformation rounds using key sizes of 128, 192, or 256 bits. When implemented correctly, it offers both high security and efficiency." styleClass="body" />
            </TextFlow>

            <!-- Pros and Cons -->
            <TextFlow textAlignment="JUSTIFY">
                <Text text="Pros:" styleClass="subtitle" />
            </TextFlow>
            <TextFlow textAlignment="JUSTIFY">
                <Text text="- Strong, standardized security." styleClass="body" />
            </TextFlow>
            <TextFlow textAlignment="JUSTIFY">
                <Text text="Cons:" styleClass="subtitle" />
            </TextFlow>
            <TextFlow textAlignment="JUSTIFY">
                <Text text="- Complexity in implementation and potential for side-channel attacks if not properly secured." styleClass="body" />
            </TextFlow>

            <!-- Toggle Button for Detailed Description -->
            <MFXToggleButton fx:id="toggleDetailsButton" text="View Detailed Description" onAction="#toggleDetailedDescription"/>

            <!-- Detailed Description Section (Initially Hidden) -->
            <VBox fx:id="detailedDescriptionContainer" spacing="10" visible="false" managed="false">
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="Detailed Description:" styleClass="subtitle" />
                </TextFlow>

                <!-- Encryption Formula -->
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="Encryption:" styleClass="subtitle" />
                </TextFlow>
                <ImageView fx:id="encryptionFormula" preserveRatio="true" />

                <!-- Decryption Formula -->
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="Decryption:" styleClass="subtitle" />
                </TextFlow>
                <ImageView fx:id="decryptionFormula" preserveRatio="true" />

                <!-- Example -->
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="Example: Encrypting 'HELLO' with AES-128" styleClass="subtitle" />
                </TextFlow>
                <ImageView fx:id="exampleImage" preserveRatio="true" />

                <!-- Cryptanalysis Methods -->
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="Cryptanalysis Methods:" styleClass="subtitle" />
                </TextFlow>
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="AES is considered secure when correctly implemented. Attacks generally target side-channel vulnerabilities or implementation flaws." styleClass="body" />
                </TextFlow>

                <!-- Additional Technical Details -->
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="Additional Technical Details:" styleClass="subtitle" />
                </TextFlow>
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="AES operates on 128-bit blocks using a substitution-permutation network, executing multiple rounds (10, 12, or 14 depending on the key size). Its design incorporates operations such as SubBytes, ShiftRows, MixColumns, and AddRoundKey to provide strong diffusion and confusion properties. This architecture makes AES robust against most cryptanalytic attacks in practice." styleClass="body" />
                </TextFlow>
            </VBox>
        </VBox>
    </StackPane>
</GridPane>
