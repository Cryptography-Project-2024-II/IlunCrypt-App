<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>
<?import io.github.palexdev.materialfx.controls.MFXToggleButton?>

<GridPane alignment="CENTER" hgap="10" vgap="10"
          fx:id="grid"
          xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.iluncrypt.iluncryptapp.controllers.classic.affine.AffineCipherDescriptionController"
          stylesheets="@../../../assets/styles/Common.css"
          style="-fx-padding: 15;">

    <!-- Content Container -->
    <StackPane fx:id="contentContainer" GridPane.columnIndex="0" GridPane.rowIndex="0"
               GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
               style="-fx-padding: 10; -fx-background-radius: 10; -fx-background-color: white;">
        <VBox spacing="10" alignment="TOP_LEFT" maxWidth="Infinity" maxHeight="Infinity" style="-fx-padding: 10;">

            <!-- Title -->
            <TextFlow textAlignment="JUSTIFY">
                <Text text="Affine Cipher" styleClass="title" />
            </TextFlow>

            <!-- General Explanation (Friendly) -->
            <TextFlow textAlignment="JUSTIFY">
                <Text text="The Affine Cipher is a classical encryption method that uses a simple mathematical formula to substitute each letter of a message. It was popular before the computer era due to its ease of implementation and understanding. However, although it was fundamental in its time, " styleClass="body" />
                <Text text="currently these methods are considered vulnerable" underline="true" styleClass="body" />
                <Text text=" and are not used for applications requiring high security." styleClass="body" />
            </TextFlow>

            <!-- Pros and Cons -->
            <TextFlow textAlignment="JUSTIFY">
                <Text text="Pros:" styleClass="subtitle" />
            </TextFlow>
            <TextFlow textAlignment="JUSTIFY">
                <Text text="- Easy to understand and implement." styleClass="body" />
            </TextFlow>
            <TextFlow textAlignment="JUSTIFY">
                <Text text="Cons:" styleClass="subtitle" />
            </TextFlow>
            <TextFlow textAlignment="JUSTIFY">
                <Text text="- Vulnerable to frequency analysis and brute force attacks." styleClass="body" />
            </TextFlow>
            <TextFlow textAlignment="JUSTIFY">
                <Text text="- Limited key space." styleClass="body" />
            </TextFlow>

            <!-- Toggle Button for Detailed Description -->
            <MFXToggleButton fx:id="toggleDetailsButton" text="View Detailed Description" onAction="#toggleDetailedDescription"/>



            <!-- Detailed Description Section (Initially Hidden) -->
            <VBox fx:id="detailedDescriptionContainer" spacing="10" visible="false" managed="false">
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="Detailed Description:" styleClass="subtitle" />
                </TextFlow>

                <!-- Encryption Formula -->
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="Encryption Formula:" styleClass="subtitle"/>
                </TextFlow>

                <ImageView fx:id="encryptionFormula" preserveRatio="true" />


                <!-- Decryption Formula -->
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="Decryption Formula:"  styleClass="subtitle"/>
                </TextFlow>
                <ImageView fx:id="decryptionFormula" preserveRatio="true" />


                <!-- Example -->
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="Example: Encrypting 'HELLO' with a=5, b=8" styleClass="subtitle"/>
                </TextFlow>
                <ImageView fx:id="exampleImage"  preserveRatio="true" />

                <!-- Cryptanalysis Methods -->
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="Cryptanalysis Methods:" styleClass="subtitle" />
                </TextFlow>
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="• Frequency Analysis: Since the Affine Cipher is monoalphabetic, letter frequencies remain unchanged, making it vulnerable to statistical attacks." styleClass="body" />
                </TextFlow>

                <TextFlow textAlignment="JUSTIFY">
                    <Text text="• Known Plaintext Attack: If an attacker obtains a plaintext-ciphertext pair, they can solve for the keys using simultaneous equations." styleClass="body" />
                </TextFlow>

                <TextFlow textAlignment="JUSTIFY">
                    <Text text="• Brute Force: With a limited number of valid keys (as 'a' must be coprime with the alphabet size), exhaustive search is feasible." styleClass="body" />
                </TextFlow>

                <!-- Additional Technical Details -->
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="Additional Technical Details:" styleClass="subtitle" />
                </TextFlow>
                <TextFlow textAlignment="JUSTIFY">
                    <Text text="In the Affine Cipher, the keys 'a' and 'b' must be chosen carefully: 'a' must be coprime with the alphabet size (usually 26) to ensure a multiplicative inverse exists. This guarantees a bijective mapping but also exposes the cipher to linear cryptanalysis. Modern encryption methods overcome these limitations by incorporating non-linear operations and larger key spaces." styleClass="body" />
                </TextFlow>
            </VBox>
        </VBox>
    </StackPane>
</GridPane>
