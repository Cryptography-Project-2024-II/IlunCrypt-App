<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_LEFT" spacing="15" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-padding: 20;">

    <!-- Title -->
    <Label text="Classical Encryption Methods" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-alignment: center-left;" />

    <!-- Description -->
    <Label text="This section presents various classical encryption techniques used throughout history."
           wrapText="true"
           style="-fx-font-size: 16px; -fx-padding: 10; -fx-alignment: center-left;" />

    <Label text="Classical encryption methods transform messages using mathematical functions or letter substitution techniques to ensure confidentiality."
           wrapText="true"
           style="-fx-font-size: 14px; -fx-padding: 10; -fx-alignment: center-left;" />

    <!-- List of methods -->
    <Label text="Some of the classical encryption techniques covered here include:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-alignment: center-left;" />

    <VBox spacing="8">
        <Label text="• Affine Cipher" style="-fx-font-size: 14px; -fx-alignment: center-left;" />
        <Label text="• Multiplicative Cipher" style="-fx-font-size: 14px; -fx-alignment: center-left;" />
        <Label text="• Caesar (Shift) Cipher" style="-fx-font-size: 14px; -fx-alignment: center-left;" />
        <Label text="• Hill Cipher" style="-fx-font-size: 14px; -fx-alignment: center-left;" />
        <Label text="• Permutation Cipher" style="-fx-font-size: 14px; -fx-alignment: center-left;" />
        <Label text="• Substitution Cipher" style="-fx-font-size: 14px; -fx-alignment: center-left;" />
        <Label text="• Vigenère Cipher" style="-fx-font-size: 14px; -fx-alignment: center-left;" />
    </VBox>

    <!-- Informative Footer -->
    <Label text="Each encryption method is explained with its mathematical representation and practical examples."
           wrapText="true"
           style="-fx-font-size: 14px; -fx-padding: 10; -fx-alignment: center-left;" />

</VBox>
