<?xml version="1.0" encoding="UTF-8"?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.mfxresources.fonts.MFXFontIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.scene.layout.Region?>

<?import io.github.palexdev.materialfx.controls.MFXCheckbox?>
<GridPane
        fx:id="grid"
        hgap="20.0"
        vgap="15.0"
        styleClass="grid-pane"
        stylesheets="@../../../assets/styles/Buttons.css"
        xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.iluncrypt.iluncryptapp.controllers.symmetrickey.des.DESController">

   <!-- Define column constraints for responsive design -->
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>

   <!-- Define row constraints for responsive design -->
   <rowConstraints>
      <RowConstraints vgrow="NEVER" />
      <RowConstraints vgrow="NEVER" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="NEVER" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="NEVER" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="NEVER" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="ALWAYS" />
   </rowConstraints>

   <!-- Background StackPane with outer margin -->
   <StackPane styleClass="grid-background" fx:id="backgroundStackPane" GridPane.columnSpan="8" GridPane.rowSpan="10">
      <GridPane.margin>
         <Insets top="20.0" bottom="20.0" />
      </GridPane.margin>
   </StackPane>

   <!-- Top Bar Section -->
   <StackPane styleClass="top-bar" fx:id="topBar" GridPane.columnSpan="8" GridPane.rowIndex="0">
      <HBox spacing="10.0" alignment="CENTER">
         <!-- Back Button -->
         <MFXButton fx:id="btnBack" styleClass="icon-button" text="" onAction="#handleBackButton" prefWidth="40.0" prefHeight="40.0">
            <graphic>
               <MFXFontIcon description="fas-arrow-left" size="16.0" />
            </graphic>
         </MFXButton>

         <!-- Spacer for alignment -->
         <Region HBox.hgrow="ALWAYS" />

         <!-- Centered Section: Info Button, Title, and Method Change -->
         <HBox alignment="CENTER" spacing="10.0">
            <MFXButton fx:id="btnInfo" styleClass="icon-button" text="" onAction="#showInfoDialog" prefWidth="40.0" prefHeight="40.0">
               <graphic>
                  <MFXFontIcon description="fas-circle-info" size="16.0" />
               </graphic>
            </MFXButton>
            <Label text="Data Encryption Standard (DES)" styleClass="top-bar-title" alignment="CENTER" />
            <MFXButton fx:id="btnChangeMethod" styleClass="icon-button" text="" onAction="#showChangeMethodDialog" prefWidth="40.0" prefHeight="40.0">
               <graphic>
                  <MFXFontIcon description="fas-caret-down" size="16.0" />
               </graphic>
            </MFXButton>
         </HBox>

         <!-- Spacer for alignment -->
         <Region HBox.hgrow="ALWAYS" />
      </HBox>
   </StackPane>

   <!-- Label for Plain Text -->
   <Label
           text="Plain Text"
           styleClass="text-label"
           alignment="CENTER_LEFT"
           GridPane.columnSpan="8"
           GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets left="20.0" />
      </GridPane.margin>
   </Label>

   <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnSpan="8" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets right="20.0" />
      </GridPane.margin>
      <Region HBox.hgrow="ALWAYS" />
      <MFXButton fx:id="btnImportPlainText" styleClass="icon-button" text="" onAction="#importPlainText">
         <graphic>
            <MFXFontIcon description="fas-file-import" size="16.0" />
         </graphic>
      </MFXButton>
      <MFXButton fx:id="btnCopyPlainText" styleClass="icon-button" text="" onAction="#copyPlainText">
         <graphic>
            <MFXFontIcon description="fas-copy" size="16.0" />
         </graphic>
      </MFXButton>
   </HBox>



   <!-- TextArea for Clear Text -->
   <TextArea
           fx:id="textAreaPlainText"
           wrapText="true"
           promptText="Enter clear text here..."
           GridPane.columnSpan="8"
           GridPane.rowIndex="2">
      <GridPane.margin>
         <Insets left="20.0" right="20.0" />
      </GridPane.margin>
   </TextArea>

   <!-- Middle Controls -->
   <StackPane styleClass="middle-controls" GridPane.columnSpan="8" GridPane.rowIndex="4">
      <GridPane.margin>
         <Insets left="20.0" right="20.0" />
      </GridPane.margin>
      <HBox spacing="50.0" alignment="CENTER" HBox.hgrow="ALWAYS">

         <!-- Leftmost Section: Other Settings and Export -->
         <VBox spacing="15.0" alignment="CENTER">
            <Label fx:id="lblMode" text="Mode: AES-256-GCM" alignment="CENTER" styleClass="text-label" />
            <MFXButton text="Clear All" styleClass="outline-button" fx:id="btnClear" onAction="#clearAll" prefWidth="200.0" prefHeight="40.0">
               <graphic>
                  <MFXFontIcon description="fas-eraser" size="16.0" styleClass = "button-icon"/>
               </graphic>
            </MFXButton>
            <MFXButton text="Advanced Options" styleClass="outline-button" fx:id="btnAdvancedOptions" onAction="#showAdvancedOptions" prefWidth="200.0" prefHeight="40.0">
               <graphic>
                  <MFXFontIcon description="fas-gear" size="16.0" styleClass="button-icon"/>
               </graphic>
            </MFXButton>
            <MFXButton text="Export Encrypted Information" styleClass="outline-button" fx:id="btnExportEncryptedInformation" onAction="#exportEncryptedInformation" prefWidth="200.0" prefHeight="40.0">
               <graphic>
                  <MFXFontIcon description="fas-file-export" size="16.0" styleClass="button-icon"/>
               </graphic>
            </MFXButton>
         </VBox>



         <!-- Center Section: IV and Key -->
         <VBox spacing="15.0" alignment="CENTER">
            <HBox alignment="CENTER">
               <MFXTextField fx:id="textFieldIV"
                             floatMode="BORDER"
                             floatingText="Initial Vector (IV)"
                             promptText="Enter Initial Vector (IV)..."
                             prefWidth="200.0"/>

               <MFXButton fx:id="btnCopyIV" styleClass="icon-button" text="" >
                  <graphic>
                     <MFXFontIcon description="fas-copy" size="16.0"/>
                  </graphic>
               </MFXButton>
            </HBox>

            <HBox fx:id="buttonContainerIV" alignment="BOTTOM_CENTER" spacing="10">
               <MFXButton fx:id="btnShuffleIV" text="" styleClass="outline-button">
                  <graphic>
                     <MFXFontIcon description="fas-shuffle" size="16.0" styleClass="button-icon"/>
                  </graphic>
               </MFXButton>
               <MFXButton fx:id="btnUploadIV" text="" styleClass="outline-button">
                  <graphic>
                     <MFXFontIcon description="fas-upload" size="16.0" styleClass="button-icon"/>
                  </graphic>
               </MFXButton>
               <MFXButton fx:id="btnDownloadIV" text="" styleClass="outline-button">
                  <graphic>
                     <MFXFontIcon description="fas-download" size="16.0" styleClass="button-icon"/>
                  </graphic>
               </MFXButton>
               <MFXButton fx:id="btnDeleteIV" text="" styleClass="outline-button">
                  <graphic>
                     <MFXFontIcon description="fas-trash-can" size="16.0" styleClass="button-icon"/>
                  </graphic>
               </MFXButton>
            </HBox>
         </VBox>

         <VBox spacing="15.0" alignment="CENTER">
            <HBox alignment="CENTER">
               <MFXTextField fx:id="textFieldKey"
                             floatMode="BORDER"
                             floatingText="Key"
                             promptText="Enter key..."
                             prefWidth="200.0"/>

               <MFXButton fx:id="btnCopyKey" styleClass="icon-button" text="" >
                  <graphic>
                     <MFXFontIcon description="fas-copy" size="16.0"/>
                  </graphic>
               </MFXButton>
            </HBox>

            <HBox fx:id="buttonContainerKey" alignment="BOTTOM_CENTER" spacing="10">
               <MFXButton fx:id="btnShuffleKey" text="" styleClass="outline-button">
                  <graphic>
                     <MFXFontIcon description="fas-shuffle" size="16.0" styleClass="button-icon"/>
                  </graphic>
               </MFXButton>
               <MFXButton fx:id="btnUploadKey" text="" styleClass="outline-button">
                  <graphic>
                     <MFXFontIcon description="fas-upload" size="16.0" styleClass="button-icon"/>
                  </graphic>
               </MFXButton>
               <MFXButton fx:id="btnDownloadKey" text="" styleClass="outline-button">
                  <graphic>
                     <MFXFontIcon description="fas-download" size="16.0" styleClass="button-icon"/>
                  </graphic>
               </MFXButton>
               <MFXButton fx:id="btnDeleteKey" text="" styleClass="outline-button">
                  <graphic>
                     <MFXFontIcon description="fas-trash-can" size="16.0" styleClass="button-icon"/>
                  </graphic>
               </MFXButton>
            </HBox>
         </VBox>



         <!-- Right Section: Cipher/Decipher -->
         <VBox spacing="15.0" alignment="CENTER_RIGHT">
            <MFXButton text="Encrypt" styleClass="outline-button-green" fx:id="btnEncrypt" onAction="#encrypt" prefWidth="150.0" prefHeight="40.0">
               <graphic>
                  <MFXFontIcon description="fas-lock" size="16.0" styleClass = "button-icon"/>
               </graphic>
            </MFXButton>
            <MFXButton text="Decrypt" styleClass="outline-button-red" fx:id="btnDecrypt" onAction="#decrypt" prefWidth="150.0" prefHeight="40.0">
               <graphic>
                  <MFXFontIcon description="fas-lock-open" size="16.0" styleClass = "button-icon"/>
               </graphic>
            </MFXButton>
         </VBox>
      </HBox>
   </StackPane>

   <!-- Label for Cipher Text -->
   <Label
           text="Cipher Text"
           styleClass="text-label"
           alignment="CENTER_LEFT"
           GridPane.columnSpan="8"
           GridPane.rowIndex="5">
      <GridPane.margin>
         <Insets left="20.0" />
      </GridPane.margin>
   </Label>
   <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnSpan="8" GridPane.rowIndex="5">
      <GridPane.margin>
         <Insets right="20.0" />
      </GridPane.margin>
      <Region HBox.hgrow="ALWAYS" />
      <MFXButton fx:id="btnImportCipherText" styleClass="icon-button" text="" onAction="#importCipherText">
         <graphic>
            <MFXFontIcon description="fas-file-import" size="16.0" />
         </graphic>
      </MFXButton>
      <MFXButton fx:id="btnCopyCipherText" styleClass="icon-button" text="" onAction="#copyCipherText">
         <graphic>
            <MFXFontIcon description="fas-copy" size="16.0" />
         </graphic>
      </MFXButton>
   </HBox>


   <!-- TextArea for Cipher Text -->
   <TextArea
           fx:id="textAreaCipherText"
           wrapText="true"
           promptText="Enter cipher text here..."
           GridPane.columnSpan="8"
           GridPane.rowIndex="6">
      <GridPane.margin>
         <Insets left="20.0" right="20.0" />
      </GridPane.margin>
   </TextArea>
</GridPane>

